- render_region :main do |main|
  - main.header do
    %h1= "#{Radiant::Config['admin.title']} Recent Activity"
  - main.updated_pages do
    - unless @updated_pages.blank?
      #updated_pages.recent_box
        %h2 Recently Updated Pages
        %ul
          - @updated_pages.each do |page|
            %li
              %span= link_to page.title, page.url
              = "Updated by #{(page.updated_by || page.created_by).name} #{time_ago_in_words page.updated_at.to_time} ago."
  - main.updated_snippets do
    - unless @updated_snippets.blank?
      #updated_snippets.recent_box
        %h2 Recently Update Snippets
        %ul
          - @updated_snippets.each do |snippet|
            %li
              %span= link_to snippet.name, snippet_edit_url(snippet)
              - updater = snippet.updated_by || snippet.created_by
              - updater_name = updater.name if updater
              - updater_name = "System" unless updater
              = "Updated by #{updater_name} #{time_ago_in_words snippet.updated_at.to_time} ago."
= render_region :extensions
        
- include_stylesheet 'admin/dashboard'